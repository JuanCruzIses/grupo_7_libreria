<body>

    <%- include('./partials/header')  %> 
    <% if (a) { %>
    <main>
      
        
        
        <section class="productos">
            <h2>Libros encontrados "<span style="color: red;"><%= a %></span>"</h2>        
            <% libros.forEach(libro => { %>
               <%- include('./partials/productosIndex', {libro})  %> 
            <% }); %>
        </section>

        
      

        <span class="ir-arriba fa fa-arrow-circle-up" aria-hidden="true"></span>
       <script>
        $(document).ready(function(){

            $('.ir-arriba').click(function(){
                $('body, html').animate({
                    scrollTop: '0px'
                }, 300);
            });
        
            $(window).scroll(function(){
                if( $(this).scrollTop() > 0 ){
                    $('.ir-arriba').slideDown(300);
                } else {
                    $('.ir-arriba').slideUp(300);
                }
            });
        
        });</script>
    </main>
    

    <% } else { %>
        <main>

            <section class="productos">
                <h2>Libros encontrados "<span style="color: red;"><%= a %></span>"</h2>        
                       
          <div class="Pedidos" style="display: flex;align-items: center;">
           
      
              <div class="col text-center" style="display:grid;align-items: center;margin-top: 25%;margin-bottom:25%;">
                    <h3>"Â¡Ups! No se encontraron resultados"</h3>           
              </div>
           
          </div>
            </section>
        </main>
        <% } %>

        
